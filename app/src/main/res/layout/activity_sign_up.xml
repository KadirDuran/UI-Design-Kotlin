<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SignUp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:background="@drawable/top_shape"
        android:orientation="vertical">
        <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_gravity="end"
            android:layout_marginTop="-15dp"
            android:layout_marginEnd="-15dp"
            android:src="@drawable/pets"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:fontFamily="@font/moresugarregular"
            android:text="Welcome to" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="40sp"
            android:textColor="@color/textPetShopColor"
            android:text="Pet Shop"
            android:fontFamily="@font/moresugarregular"/>
        <ImageView
            android:layout_marginTop="-5dp"
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:layout_gravity="center"
            android:src="@drawable/cat_view"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="20"
        android:layout_marginTop="-25dp"
        android:background="@drawable/bottom_shape"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="20sp"
            android:paddingTop="40sp"
            android:paddingRight="20sp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:text="Sign Up"
                android:textColor="@color/textSignUpColor"
                android:textSize="32sp"
                android:gravity="center"/>


        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40sp"
            android:layout_marginTop="20sp"
            android:text="Name"
            android:textColor="@color/textSignUpColor"
            android:textSize="15sp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="40sp"
            android:background="@drawable/text_info"
            android:ems="10"
            android:hint="Kadir Duran"
            android:inputType="text"
            android:padding="10sp"
            android:layout_marginTop="10sp"
            android:textAlignment="center"
            android:textColorHint="#bf592b"
            tools:ignore="Autofill" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40sp"
            android:layout_marginTop="20sp"
            android:text="E-Mail"
            android:textColor="@color/textSignUpColor"
            android:textSize="15sp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="40sp"
            android:background="@drawable/text_info"
            android:ems="10"
            android:layout_marginTop="10sp"
            android:hint="kadirduran61@gmail.com"
            android:inputType="text"
            android:padding="10sp"
            android:textAlignment="center"
            android:textColorHint="#bf592b"
            tools:ignore="Autofill" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40sp"
            android:layout_marginTop="20sp"
            android:text="Password"
            android:textColor="@color/textSignUpColor"
            android:textSize="15sp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="40sp"
            android:background="@drawable/text_info"
            android:ems="10"
            android:layout_marginTop="10sp"
            android:hint="*********"
            android:inputType="textPassword"
            android:padding="10sp"
            android:textAlignment="center"
            android:textColorHint="#bf592b"
            tools:ignore="Autofill" />

        <Button
            android:id="@+id/btnLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:background="@drawable/button_bg"
            android:textColor="@color/textSignUpColor"
            android:text="Next" />

        <TextView
            android:id="@+id/lblSignIn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="15sp"
            android:gravity="center_horizontal|bottom"
            android:layout_marginBottom="20sp"
            android:text="@string/valueSignIn" />
    </LinearLayout>
</LinearLayout>